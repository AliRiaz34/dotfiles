{
    "layer": "top",
    "output": [
        "*"
    ],
    "position": "top",
    "mode": "dock",
    "height": 10,
    "exclusive": true,
    "passthrough": false,
    "reload_style_on_change": true,
    "include": [
        "$XDG_CONFIG_HOME/waybar/modules/*json*",
        "$XDG_CONFIG_HOME/waybar/includes/includes.json"
    ],
    "modules-left": [
        "group/pill#left1",
        "group/pill#left2"
    ],
    "group/pill#left1": {
        "orientation": "inherit",
        "modules": [
        "custom/power",
        "custom/weather",
        "hyprland/workspaces"
        ]
    },
    "group/pill#left2": {
        "orientation": "inherit",
        "modules": [
            "custom/spotify"
        ]
    },
    "modules-center": [
        "group/pill#center"
    ],
    "group/pill#center": {
        "modules": [
            "idle_inhibitor",
            "clock"
        ],
        "orientation": "inherit"
    },
    "modules-right": [
        "group/pill#right1",
        "group/pill#right2",
        "group/pill#right3"

    ],
    "group/pill#right1": {
        "modules": [
            "custom/dunst",
            "custom/updates",
            "tray"
        ],
        "orientation": "inherit"
    },
    "group/pill#right2": {
        "modules": [
            "pulseaudio",
            "backlight",
            "battery"
        ],
        "orientation": "inherit"
    },
    "group/pill#right3": {
        "modules": [
            "network",
            "power-profiles-daemon",
            "pulseaudio#microphone",
            "custom/keybindhint"
        ],
        "orientation": "inherit"
    }
}
